{
  "manifest_version": 3,
  "name": "ISLSpaces â€” Indian Sign Language Helper",
  "version": "1.0.0",
  "description": "Highlights ISL words and plays ISL videos using CDAC API",
  "permissions": ["storage", "contextMenus", "activeTab"],
  "host_permissions": [
  "https://10.176.30.190/*",
  "https://api.datamuse.com/*",
  "https://api.dictionaryapi.dev/*",
  "https://translate.googleapis.com/*"
],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "ISLSpaces",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
  {
    "resources": [
      "data/isl_map.json",
      "ai_bridge.js"
    ],
    "matches": ["<all_urls>"]
  }
]
}
